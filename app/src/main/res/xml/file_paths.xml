<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permite a la app acceder a archivos creados por la cámara -->
    <external-files-path
        name="external_files"
        path="." />

    <!-- (Opcional) Acceso a almacenamiento interno si se usa en versiones antiguas -->
    <files-path
        name="internal_files"
        path="." />

    <!-- (Opcional) Permite guardar imágenes temporales en caché -->
    <cache-path
        name="cache_files"
        path="." />

</paths>
